		"pg": "^8.16.3",
		"pino-pretty": "^13.1.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/jwt": "^10.0.0",
		"drizzle-orm": "^0.45.1",
		"fastify": "^5.6.2",
		"fastify-plugin": "^5.1.0",
		"fastify-type-provider-zod": "^6.1.0",
		"jsonwebtoken": "^9.0.3",
		"zod": "^4.2.1"
	}
